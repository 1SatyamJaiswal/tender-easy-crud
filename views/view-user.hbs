<section style="background-color: #379683;">
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/login">User</a></li>
            <li class="breadcrumb-item active" aria-current="page">User Profile</li>
          </ol>
        </nav>
      </div>
    </div>
{{#each rows}}
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <h5 class="my-3">{{this.F_Name}} {{this.M_Name}} {{this.L_Name}}</h5>
            <div class="d-flex justify-content-center mb-2">
              <a href="/edituser/{{this.User_Name}}" type="button" class="btn btn-outline-primary ms-1"><i class="bi bi-pencil"> Edit Profile</i></a>
              <a href="/{{this.User_Name}}" type="button" class="btn btn-outline-primary ms-1"><i class="bi bi-trash"> Delete Profile</i></a>
            </div>
            <div class="d-flex justify-content-center mb-2">
              <a href="/tenders/{{this.User_Name}}" type="button" class="btn btn-primary"><i class="bi bi-pass"> My Tenders</i></a>
              <a href="/projects/{{this.User_Name}}" type="button" class="btn btn-primary"><i class="bi bi-building"> My Projects</i></a>
            </div>
            <div class="d-flex justify-content-center mb-2">
               <a href="/addtenders/{{this.User_Name}}" type="button" class="btn btn-primary"><i class="bi bi-pass"> Add Tenders</i></a>
            </div>
            <div class="d-flex justify-content-center mb-2">
               <a href="/addprojects" type="button" class="btn btn-primary"><i class="bi bi-pass"> Select Projects</i></a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.F_Name}} {{this.M_Name}} {{this.L_Name}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Age</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.Age}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Salary</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.Salary}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Job</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.User_Type}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Gender</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">Male</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.Email}}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
{{/each}}

