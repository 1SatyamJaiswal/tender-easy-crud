
<div class="row">
  <div class="col-6">
    <h1>Supplies for the project</h1>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Item Id</th>
      <th scope="col">Item</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
     <div class="col-6 d-flex justify-content-end">
        <a href="/addsupplies/" type="button" class="btn btn-primary align-self-center">+ Add Supplies</a>
      </div>
    {{#each rows}}
    <tr>
      <td>{{this.Item_Id}}</td>
      <td>{{this.Item}}</td>
      <td>{{this.Quantity}}</td>
      <td>{{this.Price}}</td>
      <td>
        <a href="/editsupplies/{{this.Item_Id}}" type="button" class="btn btn-primary ms-1"><i class="bi bi-pencil"></i></a>
        <a href="/deletesupplies/{{this.Project_Id}}/{{this.Item_Id}}" type="button" class="btn btn-primary ms-1"><i class="bi bi-trash"></i></a>
    </tr>
  </div>
    {{/each}}
  </tbody>
</table>