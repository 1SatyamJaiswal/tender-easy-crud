{{#each rows}}
<div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <p onclick="history.back()">Click to go back</p>
            <h5 class="my-3">{{this.Project_Id}}</h5>
            <div class="d-flex justify-content-center mb-2">
              <a href="/editprojects/{{this.Engineer_Id}}/{{this.Project_Id}}" type="button" class="btn btn-outline-primary ms-1"><i class="bi bi-pencil"> Edit Project</i></a>
              <a href="/projects/{{this.Engineer_Id}}/{{this.Project_Id}}" type="button" class="btn btn-outline-primary ms-1"><i class="bi bi-trash"> Delete Project</i></a>
            </div>
            <div class="d-flex justify-content-center mb-2">
              <a href="/supplies/{{this.Project_Id}}" type="button" class="btn btn-primary ms-1"><i class="bi bi-bucket"> Supplies</i></a>
              <a href="/labour/{{this.Project_Id}}" type="button" class="btn btn-primary ms-1"><i class="bi bi-people"> Labour</i></a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Company</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.Company_Name}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Budget</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.Estimated_Cost}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Location</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.Site}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Start Date</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.Start_Date}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">End Date</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.Project_Deadline}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Details</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.Tender_Info}}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}